<div class="container">
    <div class="add-comment">
        <header>
            <h2 class="h4">Ajoutez un article</h4>
        </header>
        <%= form_for(@post, url: posts_path) do |f| %>
        <div class="form-group col-md-6 form-control">
            <%= f.text_field :title %>
        </div>
        <div class="form-group col-md-12 form-control">
            <%= f.text_area :content %>
        </div>
        <div class="form-group col-md-12">
            <%= f.submit %>
        </div>
        <% end %>
    </div>
</div>

