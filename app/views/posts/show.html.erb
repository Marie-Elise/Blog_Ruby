<h1>hello</h1>

<%= @post.title %>
<%= @post.content %>
<%= @author.username %>

<%=link_to 'Editer le post', edit_post_path(@post.id) %>
<%=link_to('Supprimer le post', post_path(@post.id), method: :delete)%>


<%= form_for(@comment, url: post_comments_path(@post.id) ) do |f|%>
    <%= f.label :message %>
    <%= f.text_area :message %>
    <%= f.submit %>
<% end %>


<p>Les commentaires :</p>
<% @comments.each do | comment | %>
    <p><%= comment.message %></p>
    <%=link_to('Supprimer le commentaire', post_comments_path(@post.id), method: :delete)%>
<% end %>
