<div class="container">
	<header> 
		<h2>Bienvenue sur votre Super Blog</h2>
		<p class="text-big">Un blog réalisé en ruby on rails</p>
	</header>
	<div class="row">
		<!-- Latest Posts -->
		<main class="posts-listing col-lg-8"> 
			<div class="container">
				<div class="row">
					<!-- post -->
					<% @posts.each do |post| %>
					<div class="post col-xl-6">
						<div class="post-details">
							<h3 class="h4"><%= post.title %></h3></a>
							<p class="text-muted"><%= truncate(post.content, length: 100) %></p>
							<footer class="post-footer d-flex align-items-center">
								<div class="title"><span></span></div></a>
								<div class="see-post"><%= link_to 'voir la suite', post_path(post.id) %></div>
							</footer>
						</div>
					</div>
					<% end %>
				</div>
			</div>
		</main>
		<!-- the last users -->
		<aside class="col-lg-4">
			<div class="widget latest-posts">
				<header>
					<h3 class="h6">Tous nos utilisateurs</h3>
				</header>
				<div class="blog-posts">
					<% @users.each do |user| %>
					<div class="item d-flex align-items-center">
						<div class="title"><strong><%= user.username %></strong>
						<%= link_to '- voir le blog', blog_path(user.id) %>
						</div>
					</div>
					<% end %>
				</div>
				<%= link_to 'Voir plus de blogs', blogs_path %>
			</div>
		</aside>
	</div>
</div>
