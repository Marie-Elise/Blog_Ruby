<div class="container">
  <section class="intro">
      <div class="row">
        <div class="col-lg-8">
          <h2 class="h3">Voici un blog super</h2>
          <p class="text-big">Admirez et d√©tendez vous en lisant ces <strong>merveilleux</strong> articles.</p>
        </div>
      </div>
  </section>
  

  <div class="row">
  <% @posts.each do |post| %>
      <div class="text article col-lg-7">
          <div class="content">
            <h2 class="h4"><%= post.title %></h2>
            <p><%= truncate(post.content, length: 300) %></p>
            <footer class="d-flex">
                <div><%=link_to('Editer le post', edit_post_path(post.id))%></div>
                <div><%=link_to 'Supprimer le post', post_path(post.id), method: :delete %></div>
            </footer>
        </div>
      </div>
      <% end %>
    </div>
</div>
