<div class="container-fluid">
<% @posts.each do |post| %>
  <div>
		<h3><%= post.title %></h3>
    <p><%= truncate(post.content, length: 300) %></p>
    <%=link_to('Editer le post', edit_post_path(post.id))%>
    <%=link_to 'Supprimer le post', post_path(post.id), method: :delete %>
  </div>
<% end %>
</div>
